<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:id="@+id/activity_main_CONSTRAINT_LAYOUT"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    >
    <com.google.android.material.appbar.AppBarLayout android:id="@+id/activity_main_APPBAR"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@android:color/white"
        app:expandedTitleGravity="top"
        android:visibility="visible"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/activity_main_TOOLBAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlack"
            android:backgroundTint="@color/colorBlack"
            app:layout_scrollFlags="scroll|enterAlways"
            app:titleTextColor="@android:color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|enterAlways">

                <TextView
                    android:id="@+id/activity_main_TOOLBAR_textview"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="24dp"
                    android:backgroundTintMode="add"
                    android:bufferType="spannable"
                    android:clickable="false"
                    android:fontFamily="@font/cutive_mono"
                    android:freezesText="false"
                    android:lineSpacingMultiplier="1.3"
                    android:text="@string/app_name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/colorWhite"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:typeface="serif"
                    app:fontFamily="@font/cutive_mono"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="enterAlways"
            android:background="@color/colorBlack"
            android:backgroundTint="@color/colorBlack"
            >

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:backgroundTint="#A0A0A0A0"
                android:clickable="true"
                android:contextClickable="true"
                android:focusable="auto"
                android:focusableInTouchMode="true"
                android:foregroundTint="@color/colorPrimary"
                android:foregroundTintMode="multiply"
                android:indeterminate="true"
                android:indeterminateTint="#00897B"
                android:orientation="vertical"
                android:progressDrawable="@drawable/ic_refresh_black_24dp"
                android:progressTint="#06060A0A"
                app:layout_constraintBottom_toBottomOf="@+id/activitity_main_BASIC_COUNT"
                app:layout_constraintEnd_toStartOf="@+id/activitity_main_BASIC_COUNT"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activitity_main_BASIC_COUNT_label" />

            <TextView
                android:id="@+id/activitity_main_BASIC_COUNT_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="basics:"
                android:textColor="@color/colorPrimary"
                android:textSize="9sp"
                app:layout_constraintBottom_toTopOf="@+id/activitity_main_BASIC_COUNT"
                app:layout_constraintEnd_toEndOf="@+id/activitity_main_BASIC_COUNT"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.cardview.widget.CardView  android:id="@+id/activitity_main_BASIC_COUNT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginEnd="4dp"
                android:minWidth="60dp"
                app:layout_constraintEnd_toStartOf="@+id/activitity_main_DETAILED_COUNT"
                app:layout_constraintTop_toBottomOf="@+id/activitity_main_BASIC_COUNT_label">
                <TextView
                    android:id="@+id/activitity_main_BASIC_COUNT_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="8dp"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text="10 780"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>



            <TextView  android:id="@+id/activitity_main_DETAILED_COUNT_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="detailed:"
                android:textColor="@color/colorPrimary"
                android:textSize="9sp"
                app:layout_constraintBottom_toTopOf="@+id/activitity_main_DETAILED_COUNT"
                app:layout_constraintEnd_toEndOf="@+id/activitity_main_DETAILED_COUNT"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.cardview.widget.CardView
                android:id="@+id/activitity_main_DETAILED_COUNT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:background="@color/colorPrimary"
                android:backgroundTint="@color/colorPrimary"
                android:minWidth="60dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activitity_main_DETAILED_COUNT_label">

                <TextView
                    android:id="@+id/activitity_main_DETAILED_COUNT_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="8dp"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text="100"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/activity_main_TAB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/favorite_star_on"
            app:layout_scrollFlags="enterAlways"
            app:tabIndicatorColor="@color/colorPrimary"
            app:tabIndicatorHeight="7dp"
            app:tabMode="fixed"
            app:tabPaddingEnd="8dp"
            app:tabSelectedTextColor="@color/colorBlack"
            app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
            app:tabTextColor="@color/colorGray">
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TAB_popular_label" />
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TAB_top_rated_label" />
        </com.google.android.material.tabs.TabLayout>


    </com.google.android.material.appbar.AppBarLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_main_RECYCLER_VIEW"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="fill_vertical"
        android:alwaysDrawnWithCache="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />


</androidx.coordinatorlayout.widget.CoordinatorLayout>