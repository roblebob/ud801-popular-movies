<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:id="@+id/activity_main_CONSTRAINT_LAYOUT"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    >
    <com.google.android.material.appbar.AppBarLayout android:id="@+id/activity_main_APPBAR"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@android:color/white"
        app:expandedTitleGravity="top"
        android:visibility="visible"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/activity_main_TOOLBAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlack"
            android:backgroundTint="@color/colorBlack"
            app:titleTextColor="@android:color/white"
            app:layout_scrollFlags="scroll|enterAlways"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|enterAlways"
                >

                <TextView
                    android:id="@+id/activity_main_TOOLBAR_textview"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="24dp"
                    android:backgroundTintMode="add"
                    android:bufferType="spannable"
                    android:clickable="false"
                    android:fontFamily="@font/cutive_mono"
                    android:freezesText="false"
                    android:lineSpacingMultiplier="1.3"
                    android:text="@string/app_name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/colorWhite"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:typeface="serif"
                    app:fontFamily="@font/cutive_mono"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="96dp"
                    android:layout_height="98dp"
                    android:foregroundTint="@color/colorPrimary"
                    android:indeterminate="false"
                    android:indeterminateTint="#00897B"
                    android:progressTint="#00060A0A"
                    app:layout_constraintBottom_toBottomOf="@+id/activity_main_TOOLBAR_textview"
                    app:layout_constraintEnd_toStartOf="@+id/activitity_main_TOTAL"
                    app:layout_constraintHorizontal_bias="0.475"
                    app:layout_constraintStart_toEndOf="@id/activity_main_TOOLBAR_textview"
                    app:layout_constraintTop_toTopOf="@+id/activity_main_TOOLBAR_textview"
                    app:layout_constraintVertical_bias="0.619" />

                <TextView  android:id="@+id/activitity_main_TOTAL_popular_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="popular"
                    android:textColor="@color/colorPrimary"
                    android:textSize="8sp"
                    app:layout_constraintTop_toTopOf="@+id/activity_main_TOOLBAR_textview"
                    app:layout_constraintBottom_toTopOf="@+id/activitity_main_TOTAL_popular"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.cardview.widget.CardView android:id="@+id/activitity_main_TOTAL_popular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:minWidth="50dp"
                    app:layout_constraintBottom_toTopOf="@+id/activitity_main_TOTAL_toprated"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/activitity_main_TOTAL_popular_label">
                    <TextView
                        android:id="@+id/activitity_main_TOTAL_popular_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="#00000000"
                        android:layout_marginEnd="8dp"
                        android:text="10 780"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="4dp"
                        tools:layout_editor_absoluteY="132dp" />
                </androidx.cardview.widget.CardView>


                <TextView  android:id="@+id/activitity_main_TOTAL_toprated_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="top rated"
                    android:textSize="8sp"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@id/activitity_main_TOTAL_popular"
                    app:layout_constraintBottom_toTopOf="@+id/activitity_main_TOTAL_toprated"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.cardview.widget.CardView  android:id="@+id/activitity_main_TOTAL_toprated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:minWidth="50dp"
                    app:layout_constraintBottom_toTopOf="@+id/activitity_main_TOTAL"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/activitity_main_TOTAL_popular">
                    <TextView
                        android:id="@+id/activitity_main_TOTAL_toprated_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="8dp"
                        android:background="#00000000"

                        android:textStyle="bold"
                        android:text="10 780"
                        android:textSize="10sp" />
                </androidx.cardview.widget.CardView>

                <TextView   android:id="@+id/activitity_main_TOTAL_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="merged"
                    android:textColor="@color/colorPrimary"
                    android:textSize="9sp"
                    app:layout_constraintTop_toBottomOf="@id/activitity_main_TOTAL_toprated"
                    app:layout_constraintBottom_toTopOf="@+id/activitity_main_TOTAL"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.cardview.widget.CardView  android:id="@+id/activitity_main_TOTAL"
                    android:layout_width="wrap_content"
                    android:minWidth="60dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:backgroundTint="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@id/activitity_main_TOTAL_toprated"
                    app:layout_constraintBottom_toBottomOf="@+id/activity_main_TOOLBAR_textview"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:id="@+id/activitity_main_TOTAL_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="8dp"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:text="10 780"
                        android:singleLine="true" />
                </androidx.cardview.widget.CardView>



            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/activity_main_TAB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/favorite_star_on"
            app:layout_scrollFlags="enterAlways"
            app:tabIndicatorColor="@color/colorPrimary"
            app:tabIndicatorHeight="7dp"
            app:tabMode="fixed"
            app:tabPaddingEnd="8dp"
            app:tabSelectedTextColor="@color/colorBlack"
            app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"

            app:tabTextColor="@color/colorGray">


            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TAB_popular_label" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TAB_top_rated_label" />
        </com.google.android.material.tabs.TabLayout>


    </com.google.android.material.appbar.AppBarLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_main_RECYCLER_VIEW"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="fill_vertical"
        android:alwaysDrawnWithCache="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />


</androidx.coordinatorlayout.widget.CoordinatorLayout>